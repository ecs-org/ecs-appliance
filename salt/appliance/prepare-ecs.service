[Unit]
Description=ECS Preparation

PartOf=appliance.service
ReloadPropagatedFrom=appliance.service

Requires=prepare-appliance.service
After=prepare-appliance.service
Before=appliance.service

[Service]
Type=oneshot
ExecStart=/usr/local/sbin/prepare-ecs.sh
ExecReload=/bin/true
RemainAfterExit=on

[Install]
WantedBy=multi-user.target
